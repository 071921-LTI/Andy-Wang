<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <!-- properties -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<mapping class="com.lti.models.User"></mapping>
		<mapping class="com.lti.models.UserRoles"></mapping>
		<mapping class="com.lti.models.Reimbursement"></mapping>
		<mapping class="com.lti.models.ReimburseStatus"></mapping>
		<mapping class="com.lti.models.ReimburseType"></mapping>

    </session-factory>

</hibernate-configuration>